<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/Styles/bootstrap.min.css")" rel="stylesheet">
    @RenderSection("Css", false)
    <title>@ViewBag.Title</title>
</head>
<body>
    <!--Navigation bar-->
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <a href="@Url.RouteUrl("Default")" class="navbar-brand">WebMeteoApp</a>
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse navHeaderCollapse">
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="#">Novosti i upozorenja</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle active" data-toggle="dropdown">Prognoza<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Split", "ViewForecast", new { CityId = 1 })</li>
                            <li>@Html.RouteLink("Zagreb", "ViewForecast", new { CityId = 2 })</li>
                            <li>@Html.RouteLink("Rijeka", "ViewForecast", new { CityId = 3 })</li>
                            <li>@Html.RouteLink("Osijek", "ViewForecast", new { CityId = 4 })</li>
                            <li>@Html.RouteLink("Dubrovnik", "ViewForecast", new { CityId = 5 })</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <a href="#" class="btn btn-success navbar-btn">Login</a>
                </ul>
            </div>
        </div>
    </div>
    <!--Navigation bar end-->

    <!--Page content-->
    <div class="container">
        @RenderBody()
    </div>

    <!--Footer-->
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container">
            <p class="navbar-text">WebMeteoApp</p>
            <p class="navbar-text">Edo Behmen - završni rad</p>
            <a class="navbar-btn btn btn-primary pull-right">Test button</a>
        </div>
    </div>

    <script src="http://code.jquery.com/jquery-1.12.0.min.js"></script>
    <script src="@Url.Content("~/Content/Scripts/bootstrap.min.js")"></script>
    @RenderSection("Script", false)
</body>
</html>
